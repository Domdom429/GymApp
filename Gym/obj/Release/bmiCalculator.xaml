<Page
    x:Class="Gym.bmiCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gym"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Left" Height="853" VerticalAlignment="Top" Width="480">
        <Image HorizontalAlignment="Right" Height="659" VerticalAlignment="Bottom" Width="389" Source="usethis.jpg" RenderTransformOrigin="1.67,0.23" Opacity="0.2" Stretch="Fill" Margin="0,-27,91,221"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,250,0,0" TextWrapping="Wrap" Text="Weight: " VerticalAlignment="Top" Height="52" FontSize="20"/>
        <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="34,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53"                                               RenderTransformOrigin="2.833,0.519" FontSize="20">
        	<Run Text="Height: "/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <TextBox x:Name="weightBox" HorizontalAlignment="Left" Height="52" Margin="139,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="12"/>
        <TextBox x:Name="heightBox" HorizontalAlignment="Left" Height="53" Margin="139,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="12"/>
        <Button x:ConnectionId='2' Content="Calculate" HorizontalAlignment="Left" Margin="51,423,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.274,0.45"                       />
        <Button x:ConnectionId='3' Content="Clear" HorizontalAlignment="Left" Margin="246,423,0,0" VerticalAlignment="Top"                     />
        <TextBlock x:Name="bmiTextBlock" HorizontalAlignment="Left" Margin="40.602,554.536,0,0" TextWrapping="Wrap" Text="Your BMI is: " VerticalAlignment="Top" Width="386.67" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" FontSize="20">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-0.031"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="97,10,0,0" TextWrapping="Wrap" Text="Calculator" VerticalAlignment="Top" Width="266" Height="60" FontSize="40" FontFamily="AR JULIAN"/>
        <Button x:ConnectionId='4' Content="Back" HorizontalAlignment="Left" Margin="280,584,0,0" VerticalAlignment="Top"                       />

    </Grid>

</Page>

