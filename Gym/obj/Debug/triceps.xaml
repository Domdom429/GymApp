        <Image HorizontalAlignment="Left" Height="145" Margin="6,258,0,0" VerticalAlignment="Top" Width="146" Source="closegripbench.gif"/>
        <Image HorizontalAlignment="Left" Height="145" Margin="8,84.167,0,-10" VerticalAlignment="Top" Width="146" Source="singletricepextension.gif" Grid.Row="1"/>
        <Button x:ConnectionId='2' Content="Back" HorizontalAlignment="Left" Margin="287,169.167,0,-7" Grid.Row="1" VerticalAlignment="Top"                     />

    </Grid>
</Page>

