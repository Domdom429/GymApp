        <TextBlock HorizontalAlignment="Left" Margin="160,43,0,0" TextWrapping="Wrap" Text="Skullcrusher" VerticalAlignment="Top" FontFamily="Stencil" Width="230" Height="84" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,153,0,0" TextWrapping="Wrap" Text="Dip off bench" VerticalAlignment="Top" FontFamily="Stencil" Width="230" Height="117" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="160,270,0,0" TextWrapping="Wrap" Text="close grip bench" VerticalAlignment="Top" FontFamily="Stencil" Width="230" Height="84" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,0.167,0,0" TextWrapping="Wrap" Text="standing skullcrusher" VerticalAlignment="Top" FontFamily="Stencil" Width="230" Height="84" FontSize="30" Grid.Row="1"/>

        <Image HorizontalAlignment="Right" Height="692" VerticalAlignment="Bottom" Width="396" Source="/background1.jpg" RenderTransformOrigin="1.67,0.23" Opacity="0.2" Stretch="Fill" Margin="0,-52,4,0" Grid.RowSpan="2"/>
        <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="160,111.167,0,0" TextWrapping="Wrap" Text="single arm extension" VerticalAlignment="Top" FontFamily="Stencil" Width="230" Height="84" FontSize="30" Grid.Row="1"                                              />
        <Image HorizontalAlignment="Left" Height="145" Margin="6,14,0,0" VerticalAlignment="Top" Width="146" Source="skullcrusher.gif"/>
        <Image HorizontalAlignment="Left" Height="145" Margin="240,126,0,0" VerticalAlignment="Top" Width="146" Source="dipoffbench.gif"/>
